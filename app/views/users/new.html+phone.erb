<%= render "shared/navbar" %>
<div class="navbar-back-container"></div>
<div class="home-mobile-container">
  <div class="first-mobile-container">
    <div class="main-mobile-text-1">
      <h1><span>Yoda</span> is coming</h1>
      <h2>BEST WAY TO MOVE AROUND CITIES</h2>
      <div class="form">
        <div class="form-wrap clearfix <%= "ended" if Rails.application.config.ended %>">
          <% if Rails.application.config.ended %>
            <%= render "users/campaign_ended" %>
          <% else %>
            <%= render "users/campaign_ongoing" %>
          <% end %>
        </div>
        <!-- <a href="/already-subscribe">Already subscribe yourself?</a> -->
      </div>
    </div>
    <%= image_tag('yoda_mobile.png', class: "yoda-image") %>
  </div>
  <div class="second-mobile-container">
    <div class="main-mobile-text-2">
      <h1>Take a <span>ride</span></h1>
      <p>Find a Yoda Nearby<br>Ride Anywhere<br>1â‚¬ to Start, 25cent/minute</p>
    </div>
    <%= image_tag('iphone_yoda_app.png') %>
  </div>
  <div class="third-mobile-container">
    <div class="main-mobile-text-3">
      <h1>A <span>e-motorbike</span> that<br> feels like riding a bike</h1>
      <h2>How does it feel?</h2>
      <ul>
        <li>Easy</li>
        <li>Safe</li>
        <li>Effortless</li>
        <li>Fun</li>
      </ul>
    </div>
    <%= image_tag('yodazer_3.png') %>
  </div>
  <div class="fourth-mobile-container">
    <div class="main-mobile-text-4">
      <h1>Accessible to <span>anyone</span></h1>
      <div class="license-text-mobile">
        <p>Maximum speed based on you.<br>Do you have a license?</p>
        <div class="no-license-mobile license-mobile">
          <%= image_tag('license_no.svg', class: "license-no") %>
          <p>Up to 25 km/h</p>
        </div>
        <div class="yes-license-mobile license-mobile">
          <%= image_tag('license_ok.svg', class: "license-no") %>
          <p>Up to 45 km/h</p>
        </div>
      </div>
    </div>
  </div>
  <div class="fifth-container-mobile">
    <div class="text-container">
      <h2>A <span>comfortable</span> ride</h2>
      <ul>
        <li>Charge your phone</li>
        <li>Answer calls in the helmet</li>
        <li>Use your phone to navigate</li>
      </ul>
    </div>
    <%= image_tag('YODA_handlebar_cable.png') %>
  </div>
  <div class="contact-mobile-container">
    <div class="contact-mobile-content">
      <h3>Contact Us</h3>
      <p>Say Hello, Our Team is Excited to Hear From You!</p>
      <div class="contact-bullet-mobile-container">
        <div class="bullet-mobile-group">
          <div class="bullet-mobile">
            <%= image_tag('contact_email.png') %>
            <p class="title">Email</p>
            <p class="info">contact@yoda-city.com</p>
          </div>
          <div class="bullet-mobile">
            <%= image_tag('contact_phone.png') %>
            <p class="title">Call Us</p>
            <p class="info">+32(0)472.22.22.05</p>
          </div>
        </div>
        <div class="bullet-mobile-group">
          <div class="bullet-mobile social-mobile">
            <%= link_to "http://www.instagram.com" do %>
              <%= image_tag('contact_insta.png') %>
            <% end %>
            <p class="title">Instagram</p>
          </div>
          <div class="bullet-mobile social-mobile">
            <%= link_to "http://www.facebook.com/yodacity", target: "_blank" do %>
              <%= image_tag('contact_facebook.png') %>
            <% end %>
            <p class="title">Facebook</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render "shared/footer" %>
</div>

<script>
  $(document).ready(function() {
      $(window).scroll(function() {
          var height = $('.first-mobile-container').height();
          var scrollTop = $(window).scrollTop();

          if (scrollTop >= height - height*0.93) {
              $('.navbar-container').addClass('solid-nav');
          } else {
              $('.navbar-container').removeClass('solid-nav');
          }
      });
  });
</script>

